@using Newtonsoft.Json
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>@ViewData["Title"] - Gaver.Web</title>

  <link rel="stylesheet" href="~/icomoon/style.css" asp-append-version="true"/>
  <environment names="Production">
    <link rel="stylesheet" href="~/dist/styles.css" asp-append-version="true"/>
  </environment>
</head>
<body style="background: #222">
  @RenderBody()

  <script>
    window.initialReduxState = @Json.Serialize(new {
                                 User = new {
                                   User.Identity.Name,
                                   User.Identity.IsAuthenticated
                                 }
                               })
  </script>
  @RenderSection("scripts", false)
</body>
</html>