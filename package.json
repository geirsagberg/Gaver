{
  "name": "gaver",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "tsc && vite build",
    "build:backend": "dotnet build",
    "serve": "vite preview",
    "test:frontend": "jest",
    "test:backend": "foreach -g 'test/**Tests/*.csproj' -x 'cd #{dir} && dotnet test' --no-C",
    "test": "run-p test:frontend test:backend",
    "test:watch": "npm test && chokidar '**/*.cs' -c 'npm test'",
    "clean": "del-cli src/**/obj/ src/**/bin/ test/**/obj/ test/**/bin/ node_modules/.cache/ src/**/wwwroot",
    "clean:www": "del-cli src/Gaver.Web/wwwroot/",
    "start:frontend": "vite",
    "start:backend": "cd src/Gaver.Web && cross-env ASPNETCORE_ENVIRONMENT=Development dotnet run",
    "start": "run-p start:frontend start:backend",
    "start:prod": "npm run webpack && dotnet run --project src/Gaver.Web --launch-profile Production",
    "watch": "cd src/Gaver.Web && cross-env ASPNETCORE_ENVIRONMENT=Development dotnet watch run",
    "cloc": "cloc --exclude-dir=node_modules,typings,wwwroot,bin,obj --exclude-lang=JSON ."
  },
  "type": "module",
  "author": "Geir Sagberg",
  "dependencies": {
    "@emotion/react": "^11.7.0",
    "@emotion/styled": "^11.6.0",
    "@microsoft/signalr": "^6.0.0",
    "@mui/material": "^5.2.3",
    "@mui/styles": "^5.2.3",
    "@types/toastr": "^2.1.39",
    "auth0-js": "^9.18.0",
    "classnames": "^2.3.1",
    "color": "^4.1.0",
    "isomorphic-fetch": "^3.0.0",
    "jwt-decode": "^3.1.2",
    "lodash-es": "^4.17.21",
    "luxon": "^2.2.0",
    "normalizr": "^3.6.1",
    "nprogress": "^0.2.0",
    "overmind-react": "^29.0.1",
    "page": "^1.11.6",
    "pubsub-js": "^1.9.4",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "simplebar-react": "^2.3.6",
    "toastr": "^2.1.4",
    "trianglify": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/auth0-js": "^9.14.5",
    "@types/color": "^3.0.2",
    "@types/jest": "^27.0.3",
    "@types/lodash-es": "^4.17.5",
    "@types/luxon": "^2.0.7",
    "@types/node": "^16.11.12",
    "@types/nprogress": "^0.2.0",
    "@types/page": "^1.11.5",
    "@types/pubsub-js": "^1.8.3",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@types/react-dom": "^17.0.11",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.4.0",
    "cloc": "^2.9.0",
    "del-cli": "^4.0.1",
    "foreach-cli": "^1.8.1",
    "jest": "^27.4.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.4",
    "postcss-custom-properties": "^12.0.0",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-simple-vars": "^6.0.3",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.3",
    "vite": "^2.7.1"
  }
}
